@model GestionReservas.Models.Reserva
  
<h2>Registrar Reserva</h2>

<form asp-action="Crear" method="post">

    <div class="mb-3">
        <label>Código:</label>
        <input asp-for="CodigoReserva" class="form-control" />
        <span asp-validation-for="CodigoReserva" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Nombre del Profesor:</label>
        <input asp-for="NombreProfesor" class="form-control" />
        <span asp-validation-for="NombreProfesor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Correo:</label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Laboratorio:</label>
        <select asp-for="Laboratorio" class="form-control">
            <option value="">Seleccione...</option>
            <option>Lab-01</option>
            <option>Lab-02</option>
            <option>Lab-03</option>
            <option>Lab-Redes</option>
            <option>Lab-IA</option>
        </select>
        <span asp-validation-for="Laboratorio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Fecha de Reserva:</label>
        <input asp-for="FechaReserva" type="date" class="form-control" />
        <span asp-validation-for="FechaReserva" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Hora Inicio:</label>
        <input asp-for="HoraInicio" type="time" class="form-control" />
        <span asp-validation-for="HoraInicio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Hora Fin:</label>
        <input asp-for="HoraFin" type="time" class="form-control" />
        <span asp-validation-for="HoraFin" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Motivo:</label>
        <textarea asp-for="Motivo" class="form-control"></textarea>
        <span asp-validation-for="Motivo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
