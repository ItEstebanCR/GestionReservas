<!DOCTYPE html>
<html lang="es">
<head>   
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestión de Reservas</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        body {
            background-color: #ffffff;
            color: #000000;
        }

        .navbar {
            background-color: #000000 !important;
        }

            .navbar a {
                color: white !important;
                font-weight: bold;
            }

        footer {
            background-color: #000000;
            color: white;
            padding: 20px 0;
            text-align: center;
            margin-top: 40px;
        }
    </style>
</head>

<body>

    <!-- BARRA DE NAVEGACIÓN -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Reservas" asp-action="Index">Gestión de Reservas</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="menu">
                <ul class="navbar-nav ms-auto">

                    <!-- CORREGIDO: asp-action="Crear" -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Reservas" asp-action="Crear">Crear Reservas</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Reservas" asp-action="Index">Ver Reservas</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- CUERPO DE LA PÁGINA -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer>
        <p>Gestión de Reservas - ASP.NET Core MVC</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
